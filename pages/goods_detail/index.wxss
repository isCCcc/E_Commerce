/* pages/goods_detail/index.wxss */
.goods_detail .goods_swiper swiper {
  height: 62vw;
  text-align: center;
}
.goods_detail .goods_swiper swiper image {
  width: 60%;
}
.goods_detail .goods_prices {
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themecolor);
}
.goods_detail .goods_name_row {
  border-top: 5rpx solid #dedede;
  border-bottom: 5px solid #dedede;
  display: flex;
  padding: 10rpx 0;
}
.goods_detail .goods_name_row .goods_name {
  flex: 5;
  color: #000;
  font-size: 30rpx;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_detail .goods_name_row .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #000;
}
.goods_detail .goods_name_row .goods_collect .iconfont {
  color: orangered;
}
.goods_detail .goods_info .goods_title {
  font-size: 32rpx;
  color: var(--themecolor);
  font-weight: 600;
  padding: 20rpx;
}
